{
  "name": "sapling-chat",
  "type": "module",
  "scripts": {
    "dev:css": "tailwindcss -i ./src/styles/main.css -o ./static/styles/main.css --watch",
    "dev:sapling": "ENV=development tsx watch src/index.tsx",
    "dev": "concurrently -n \"css,sapling\" -c \"blue,green\" \"npm run dev:css\" \"npm run dev:sapling\"",
    "clean": "rm -rf dist",
    "copy-static": "cp -r static dist/static",
    "prebuild": "npm run clean",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./static/styles/main.css --minify",
    "build": "npm run build:css && tsc && npm run copy-static",
    "start": "ENV=production node dist/index.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.5",
    "@sapling/auth": "./sapling-auth",
    "@sapling/sapling": "npm:@jsr/sapling__sapling@^0.8.0-beta.2",
    "dotenv": "^16.4.7",
    "hono": "^4.7.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.1",
    "typescript": "^5.6.3"
  }
}
